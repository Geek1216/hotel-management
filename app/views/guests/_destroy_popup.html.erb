<div class="modal fade show" id="basicModal" tabindex="-1" aria-modal="true" role="dialog" style="display: block; padding-left: 0px;">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title">Guest</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body">
        <%= form_for @guest, url: guest_path(@guest), method: :delete do |f| %>
          <p>
            Are you sure? you want to delete this guest?
          </p>
          <div class="row">
            <div class="col-md-2">
              <%= f.submit "Delete", class: "btn btn-danger" %>
            </div>
            <div class="col-md-2">
              <a href="/guests" class="btn btn-secondary">Cancel</a>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>