<%= simple_form_for @guest, html: { "data-turbo": false } do |f| %>

  <div class="col-12 mt-3">
    <label class="form-label">Name</label>
      <%= f.input :name, input_html: { class: "form-control" }, label: false %>
  </div>

  <div class="col-12 mt-3">
    <label class="form-label">Passport No</label>
      <%= f.input :passport_no, input_html: { class: "form-control" }, label: false %>
  </div>

  <div class="col-12 mt-3">
    <label class="form-label">Phone</label>
      <%= f.input :phone, input_html: { class: "form-control" }, label: false %>
  </div>


  <div class="row mt-3">
    <div class="col-md-1">  <a href="/guests" class="btn btn-primary">Back</a> </div>
    <div class="col-md-2">  <%= f.button :submit, class: "btn btn-primary" %> </div>
  </div>
<% end %>