<section class="section">
  <div class="row">
    <div class="col-lg-12">

      <div class="card">
        <div class="card-body">
          <h5 class="card-title">Guests</h5>

          <div class="row">

            <div class="col-md-9">
              <a href="/guests/new" class="btn btn-primary"><i class="bi bi-plus" style="font-size: 18px;"></i> New Guest</a>
            </div>

          </div>

          <div class="table-responsive mt-3">
            <table class="table">
              <tr>
                <th>Guest ID</th>
                <th>Name</th>
                <th>Passport No</th>
                <th>Phone</th>
                <th>Actions</th>
              </tr>
              <tbody>
              <% @guests.each do |guest| %>
                <tr>
                  <td><%= guest.id %></td>
                  <td><%= guest.name %></td>
                  <td><%= guest.passport_no %></td>
                  <td><%= guest.phone %></td>
                  <td>
                    <a href="/guests/<%= guest.id %>/edit" class="btn btn-secondary btn-sm"><i class="bi bi-pencil-square"></i></a>
                    <%= link_to destroy_popup_guest_path(guest), data: { remote: true }, class: "btn btn-danger btn-sm"  do %>
                      <i class="bi bi-trash"></i>
                    <% end %>
                  </td>
                </tr>
              <% end %>
              </tbody>
            </table>
          </div>

        </div>
      </div>

    </div>
  </div>
</section>

